<div class="row">
    <div class="col s6 m6 offset-s3 offset-m3">
        <div class="card">
            <div class="card-content">
                <div class="row center-align">
                    <div class="col s12">
                        <h4>Usuario: {{usuario}}</h4>
                    </div>
                </div>
                <br>
                <div class="row center-align">
                    <div class="col s12">
                        <button class="btn btn-large btn-color waves-effect waves-light" type="submit" name="action">
                            Crear cuestionario                    
                            <i class="material-icons right">add</i>
                        </button>
                    </div>
                </div>
            </div>
            <!--Inicio de cuestionarios creados-->
            <div class="row center-align">
                {{#each cuestionarioList}}
                <div class="card-action hoverable">
                    <div class="card">
                        <div class="card-content">
                            <div class="row">
                                <div class="col s12">
                                    <span class="card-title"> {{nombre}} </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <p>{{descripcion}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <input id="id-cuestionario-input" type="hidden" name="{{idCuestionario}}">
                            <a href="">Ver respuestas</a>
                            <a href="">Editar</a>
                            <a id="borrar-btn-{{idCuestionario}}">Borrar</a>
                            <a class="borrar-btn" id="{{idCuestionario}}">Borrar</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="../public/js/profile.public.js" type="text/javascript"></script>