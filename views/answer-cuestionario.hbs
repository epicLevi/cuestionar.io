<div class="row">
    <div class="col s6 m6 offset-m3">
        <div class="card">
            <div class="card-content">
                <h3> {{nombre}} </h3>
                <p> {{descripcion}} </p>
            </div>
            <div class="card-action">
                <a>CODIGO: {{codigo}}</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s6 m6 offset-m3">
        <div class="card">
            {{#each preguntaList}}
            <div class="card-action">
                <h5> {{nombre}} </h5>
                {{#if isOpen}}
                <div class="row">
                    <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="answer-{{idPregunta}}" class="answer materialize-textarea"></textarea>
                            <label for="textarea1">Textarea</label>
                        </div>
                    </div>
                    </form>
                </div>
                {{else}}
                <form>
                    {{#each opcionList}}
                    <p>
                        <label>
                            <input
                                id="answer-{{../idPregunta}}-{{idOpcion}}"
                                class="answer"
                                name="answer-{{idPregunta}}"

                                data-idPregunta="{{idPregunta}}"

                                {{#if ../isMultipleOption}} 
                                type="checkbox"
                                {{/if}}

                                {{#if ../isMultipleSelection}}
                                type="radio"
                                {{/if}}
                            />
                            <span> {{nombre}} </span>
                        </label>
                    </p>
                    {{/each}}
                </form>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</div>

<div class="row">
    <div class="col s6 m6 offset-s3 offset-m3 center-align">
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="col s12 center-align">
                        <button
                            id="enviar-btn" 
                            class="btn btn-large btn-color waves-effect waves-light"
                        >
                            Enviar Respuestas
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="object" value="{{object}}">

<script type="text/javascript" src="js/answerCuestionario.public.js"></script>  